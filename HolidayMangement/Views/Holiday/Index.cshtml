
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

</head>
<body>
    <div style="width:90%;margin:0 auto;" class="tablecontainer">
        <a class="popup btn btn-primary" href="/Holiday/Save/0" style="margin-bottom:20px;margin-top:20px">Add Holiday</a>
        <table id="myDatatable" class="table table-hover">
            <thead>
                <tr>
                    <th>Holiday Type</th>
                    <th>Holiday Name</th>
                    <th>Holiday Date</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(document).ready(function () {

          
            var oTable = $("#myDatatable").DataTable({
                "ajax": {
                    "url": "/Holiday/GetHolidays",
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "HolidayType", "aoutowidth": true },
                    { "data": "HolidayName", "aoutowidth": true },
                    { "data": "HolidayDate", "aoutowidth": true },
                    {
                        "data": "Id", "width": "50px", "render": function (data) {
                            return '<a class="popup" href="/Holiday/Save/' + data + '">Edit</a>';
                        }
                    },
                    {
                        "data": "Id", "width": "50px", "render": function (data) {
                            return '<a class="popup" href="/Holiday/Delete/' + data + '">Delete</a>';
                        }
                    }
                ]
            })
            $('.tablecontainer').on("click", "a.popup", function (e) {
                e.preventDefault();
                openPopup($(this).attr('href'));
            })
            function openPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form');
                });
                $dialog = $('<div class="popupWindow" style="overflow:auto"><div/>')
                    .html($pageContent)
                    .dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        model: true,
                        title: 'Popup Dialog',
                        height: 550,
                        width: 600,
                        close: function () {
                            $dialog.dialog('destroy').remove();
                        }
                    })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }

                    })

                    e.preventDefault();

                })

                $dialog.dialog('open');
            }
           
        });
    </script>
</body>
</html>
